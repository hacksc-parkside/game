	}
	
	@Override
	public void destroy() {
		// TODO Auto-generated method stub
		super.destroy();
	}
	
	@Override
	public void run() {
		// TODO Auto-generated method stub
		while(true){
			repaint();
			try {
				   Thread.sleep(17);
				} catch (InterruptedException e) {
				   e.printStackTrace();
				}			
			bg1.update();
			bg2.update();
		}
		
	}

