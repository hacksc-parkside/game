public class StartingClass extends Applet implements Runnable, KeyListener{
	
	private Shape shape1, shape2, shape3, shape4, shapeMain; 
	private Image image, firstShape, secondShape, thirdShape, fourthShape, mainShape; 
	private Grapics second; 
	private URL base; 
	private static Background bg1, bg2;
	
	@Override
	public void init() {
		// TODO Auto-generated method stub
		setSize(800, 480);
		setBackground(Color.BLACK);
		setFocusable(true);
		addKeyListener(this);
		Frame frame = (Frame) this.getParent().getParent();
	     frame.setTitle("Hackbot");
		super.init();
		
		//Image Setups 
		
		firstShape = getImage(base, "data/image1.png"); 
