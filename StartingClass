		mainShape = getImage(base, "data/image4.png"); 
		
	}
	
	@Override
	public void start() {
		// TODO Auto-generated method stub
		Thread thread = new Thread(this);
	    thread.start();  
	    bg1 = new Background(0, 0);
	    bg2 = new Background(2160, 0);
	    shape1 = new Shape(); 
	    shape2 = new Shape(); 
	    shape3 = new Shape(); 
	    shape4 = new Shape(); 
	    shapeMain = new Shape(); 
	    shape1.setCenterX = (100); 
	    shape1.setCente // unfinished code left off here 
		super.start();
	}
	
	@Override
